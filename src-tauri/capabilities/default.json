{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-save",
    "fs:allow-write-text-file",
    "fs:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "^\\d{4}$"
            }
          ],
          "name": "binaries/main",
          "sidecar": true
        }
      ]
    }
  ]
}
